{
  "name": "e2e-tests",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "cs": "npx tsx ./scripts/compile/compileSingleContract.ts",
    "ts": "tsc --noEmit --incremental --preserveWatchOutput --pretty",
    "build:debug": "./build.sh path=./contracts $*",
    "build:prod": "env BUILD_PROD=1 ./build.sh path=./contracts $*",
    "localnode": "./substrate-contracts-node --dev --tmp -lerror,runtime::contracts=debug --rpc-max-connections 5000 --pruning=archive",
    "test": "./runTests.sh",
    "generateTypes": "./forceArtifactLegacyVersion.sh && rm -rf typechain && npx tsx ./runWithoutWarnings.ts npx @c-forge/typechain-polkadot --in artifacts --out typechain && npx tsx ./scripts/typechain/generateEventsEnum.ts",
    "lint": "pnpm lint:format && pnpm lint:fix",
    "lint:fix": "eslint . --ext .js,.ts --fix --ignore-path ./.gitignore",
    "lint:format": "pretty-quick  --loglevel warn --write \"./**/*.{js,ts,md,json}\" ",
    "build-pendzl-tests": "cd ../pendzl-tests && pnpm i && pnpm build",
    "prepare": "pnpm build-pendzl-tests && husky install"
  },
  "dependencies": {
    "@c-forge/pendzl-tests": "link:../pendzl-tests",
    "@c-forge/polkahat-chai-matchers": "0.0.74",
    "@c-forge/polkahat-network-helpers": "^0.0.74",
    "@c-forge/typechain-compiler": "0.0.54",
    "@c-forge/typechain-polkadot": "0.0.54",
    "@c-forge/typechain-types": "0.0.54",
    "@polkadot/api": "^10.12.4",
    "@polkadot/api-contract": "^10.12.4",
    "@polkadot/keyring": "^12.6.2",
    "@polkadot/types": "^10.12.4",
    "@polkadot/util": "^12.6.2",
    "@polkadot/util-crypto": "^12.6.2",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "bn.js": "^5.2.1",
    "chai": "^4.4.1",
    "chai-as-promised": "^7.1.1",
    "chai-formatter-monkeypatch": "^1.0.1",
    "chalk": "^4.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "fs-extra": "^11.2.0",
    "glob": "^8.1.0",
    "lint-staged": "^13.3.0",
    "lodash": "^4.17.21",
    "loglevel": "^1.9.1",
    "mocha": "^10.3.0",
    "prettier": "^3.2.5",
    "pretty-quick": "^4.0.0",
    "tsx": "^4.7.1",
    "typescript": "5.4.2"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.5",
    "@types/chai": "^4.3.12",
    "@types/chai-as-promised": "^7.1.8",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/lodash": "^4.17.0",
    "@types/mocha": "^10.0.6",
    "husky": "^9.0.11",
    "tsconfig-paths": "^4.2.0"
  }
}
